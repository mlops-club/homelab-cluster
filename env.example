# create here: https://dash.cloudflare.com/d7768a15e5f79520014a6d284bfad536/mlops-club.org/ssl-tls/origin
# create two .pem files in the repo root
# - tls-origin-cert.pem
# - tls-private-key.pem

# create here: https://dash.cloudflare.com/profile/api-tokens
# permissions: 
# - `Zone:Zone:Read` - Read zone information
# - `Zone:DNS:Edit` - Create and manage DNS records
# - `Account:Cloudflare Tunnel:Edit` - Create and manage tunnels
export CLOUDFLARE_API_TOKEN=...
# get here (right-hand sidebar): https://dash.cloudflare.com/d7768a15e5f79520014a6d284bfad536/mlops-club.org
export CLOUDFLARE_ACCOUNT_ID=...
export CLOUDFLARE_ZONE_ID=...

# create here: https://login.tailscale.com/admin/settings/trust-credentials
# permissions:
# - General > Services: write
# - Devices > Core: write
# - Keys > Auth Keys: write
# create a tag called `k8s-operator` and assign it to each of the permissions
export TAILSCALE_CLIENT_ID=...
export TAILSCALE_CLIENT_SECRET=...

export ACME_EMAIL=...
export DOMAIN=mlops-club.org

# Harbor (internal image registry)
# Choose a strong admin password for Harbor UI (example command below).
# openssl rand -base64 24
export HARBOR_ADMIN_PASSWORD="change-me"
# Harbor secret key should be a long, random, stable value across upgrades.
# Generate once: openssl rand -base64 32
export HARBOR_SECRET_KEY="change-me"

# NFS CSI (NAS-backed storage)
export NFS_SERVER="nas"
export NFS_SHARE="/home/eric/k8s-homelab"
export NFS_STORAGE_CLASS_NAME="nas-nfs"
export NFS_NAMESPACE="nfs-system"
export NFS_MOUNT_OPTIONS="nfsvers=4.1"

# Come Follow Me App
export CFM_APP_VERSION="0.1.0"
export CFM_APP_GOOGLE_CREDENTIALS_PATH="/path/to/rs-app/google-credentials.json"
